import java.util.*;
public class JavaExample1 {
	public static void main(String[] args) {
		//define object for scanner class(input data from keyboard)
		Scanner scan = new Scanner(System.in);
		
		//สั่งแสดงข้อความและรับชื่อสินค้า
		System.out.println("Input product name: ");
		String productName = scan.nextLine();
		//สั่งแสดงและรับจำนวนสินค้า
		System.out.println("Input product unit; ");
		int productUnit = scan.nextInt();
		//สั่งแสดงและรับราคาสินค้า
		System.out.println("Input price per unit: ");
		float productPrie = scan.nextFloat();
		
		
		 
	}

}
